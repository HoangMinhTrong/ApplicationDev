@model IEnumerable<ApplicationDev.Models.OrderDetail>
@{
    List<Product> products = ViewBag.Products;
}
<p>
    @* <a asp-action="Create">Create New</a> *@
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Code
            </th>
            <th>
                Create At
            </th>
            <th>
                Price of Product
            </th>
            <th>
                Quantity of Order
            </th>
            <th>
                Total Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @foreach (var product in products)
            {
                if (product.Isbn == item.ProductId)
                {
                    <td>
                        @Html.DisplayFor(modelItem => product.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => product.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => product.Price)
                    </td>
                }
            }
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
        </tr>
}
    </tbody>
</table>
