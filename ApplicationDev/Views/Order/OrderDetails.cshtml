@model IEnumerable<ApplicationDev.Models.OrderDetail>
@{
    List<Product> products = ViewBag.Products;
    List<OrderItem> orderItems = ViewBag.Oders;
        
    
}
<p>
    @* <a asp-action="Create">Create New</a> *@
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Author
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity of Order
            </th>
            <th>
                Total Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @foreach (var orderId in orderItems)
                {
                    foreach (var product in products)
                        {
                            if (orderId.Id == item.OrderId)
                            {
                            <td>
                                @Html.DisplayFor(modelItem => product.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => product.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => product.Price)
                            </td>
                        }
                    }
                }
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
        </tr>
}
    </tbody>
</table>
